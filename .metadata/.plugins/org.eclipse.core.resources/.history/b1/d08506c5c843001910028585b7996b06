package 반복문;

import java.util.Scanner;

public class 달력과제190311 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner in = new Scanner(System.in);
		int year = 0, days = 0, dayOfWeek = 0, month = 0, day = 0;
		System.out.println("원하는 연도를 입력하세요 : ");
		year = in.nextInt();
		System.out.println("원하는 달을 입력하세요 : ");
		month = in.nextInt();
		days = (year - 1900) * 365;
		System.out.printf("%d년 %d월 달력\n", year, month);
		System.out.printf("%3c %3c %3c %3c %3c %3c %3c", 일, 월, 화, 수, 목, 금, 토);
		for(int i=1900; i<year; i++)
			if((i%4 == 0 && i%100 != 0) || i%400 == 0) {
				// 윤년이 포함되는 경우는 그 해에 +1 해주기
				days++;
			}
			if((year % 4 == 0 && year % 100 !=0) || year % 400 == 0);
					if(month >= 3) { //원하는 연도 당해가 윤년이면, 3월 이후 날짜는 +1 해줄것
				days++;
			switch(month) {
			case 12: days = days + 30;
			case 11: days = days + 31;
			case 10: days = days + 30;
			case 9: days = days + 31;
			case 8: days = days + 31;
			case 7: days = days + 30;
			case 6: days = days + 31;
			case 5: days = days + 30;
			case 4: days = days + 31;
			case 3: days = days + 28;
			case 2: days = days + 31;
			}
			days = days + day - 1;
			dayOfWeek = days % 7;
			if( dayOfWeek == 0 ) {
				dayOfWeek = '월';
			} else if( dayOfWeek == 1) {
				dayOfWeek = '화';
			} else if( dayOfWeek == 2) {
				dayOfWeek = '수';
			} else if( dayOfWeek == 3) {
				dayOfWeek = '목';
			} else if( dayOfWeek == 4) {
				dayOfWeek = '금';
			} else if( dayOfWeek == 5) {
				dayOfWeek = '토';
			} else if( dayOfWeek == 6) {
				dayOfWeek = '일';
			}
			for(int i=1;i<8;i++) {
				System.out.print(i);
			for(int j=8;j<15;j++) {
				System.out.print(j);
			for(int k=15;k<22;k++) {
				System.out.print(k);
			}
				System.out.println();
			}
			in.close();
			}
		}
	}
}
		