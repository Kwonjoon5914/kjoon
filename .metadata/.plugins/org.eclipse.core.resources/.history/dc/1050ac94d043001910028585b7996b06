package 반복문;

import java.util.Scanner;

public class 달력과제190311 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner in = new Scanner(System.in);
		int year = 0, days = 0, dayOfWeek = 0, month = 0, day = 0;
		int month2=0;
		System.out.print("원하는 연도를 입력하세요 : ");
		year = in.nextInt();
		System.out.print("원하는 달을 입력하세요 : ");
		month = in.nextInt();
		
		System.out.printf("%d년 %d월 달력\n", year, month);
		System.out.printf("%c %3c %3c %3c %3c %3c %3c", '일', '월', '화', '수', '목', '금', '토');
		
		days = (year - 1900) * 365;
		for(int i=1900; i<year; i++)
			if((i%4 == 0 && i%100 != 0) || i%400 == 0) {
				// 윤년이 포함되는 경우는 그 해에 +1 해주기
				days++;
			}
			if((year % 4 == 0 && year % 100 !=0) || year % 400 == 0);
					if(month >= 3) { //원하는 연도 당해가 윤년이면, 3월 이후 날짜는 +1 해줄것
				days++;
			switch(month) {
			case 12: days = days + 30;
			case 11: days = days + 31;
			case 10: days = days + 30;
			case 9: days = days + 31;
			case 8: days = days + 31;
			case 7: days = days + 30;
			case 6: days = days + 31;
			case 5: days = days + 30;
			case 4: days = days + 31;
			case 3: days = days + 28;
			case 2: days = days + 31;
			}
			switch(month) {
			case 1: month2 = 31; break;
			case 2: month2 = ((year % 4 == 0 && year % 100 !=0) || year % 400 == 0) ? 29 : 28; break;
			case 3: month2 = 31; break;
			case 4: month2 = 30; break;
			case 5: month2 = 31; break;
			case 6: month2 = 30; break;
			case 7: month2 = 31; break;
			case 8: month2 = 31; break;
			case 9: month2 = 30; break;
			case 10: month2 = 31; break;
			case 11: month2 = 30; break;
			case 12: month2 = 31; break;
			}
			days = days + day - 1;
			dayOfWeek = days % 7;
			if( dayOfWeek == 0 ) {
				dayOfWeek = '월';
			} else if( dayOfWeek == 1) {
				dayOfWeek = '화';
			} else if( dayOfWeek == 2) {
				dayOfWeek = '수';
			} else if( dayOfWeek == 3) {
				dayOfWeek = '목';
			} else if( dayOfWeek == 4) {
				dayOfWeek = '금';
			} else if( dayOfWeek == 5) {
				dayOfWeek = '토';
			} else if( dayOfWeek == 6) {
				dayOfWeek = '일';
			}
			for(int i=1; i<=month2; i++) {
				if(i==1) {
						for(int j=1; j<dayOfWeek; j++) {
								System.out.print("  ");
						}
				}
				if(i<10) {
					System.out.print(" " + i + " ");
				}
				if(dayOfWeek%7==0) {
						System.out.println();
				}
				dayOfWeek++;
			}
			System.out.println("------------------------");
			in.close();
			}
		}
	}
